{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env":
  {
    "node": true,
    "es6": true,
    "browser": true
  },
  "rules":
  {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/state-in-constructor": [0, { "extensions": [".js", ".jsx"] }],
    "react/static-property-placement": [0, { "extensions": [".js", ".jsx"] }],
    "react/forbid-prop-types": [0, { "extensions": [".js", ".jsx"] }],
    "max-len": [1, 80, 2],
    "no-underscore-dangle": "off",
    "require-jsdoc": "warn"
  }
}